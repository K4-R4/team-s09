<html>
<head>
  <meta charset="UTF-8">
  <!-- https://developer.mozilla.org/en-US/docs/Web/HTTP/CSP -->
  <meta http-equiv="Content-Security-Policy"
    content="default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'">
  <link href="../src/styles/styles.css" rel="stylesheet">
  <title>memo</title>
</head>
<body>
  <div class="Header">
    背景
    <button id="displayTasks" type="radio">タスクを背景に表示する</button>
    <button id="restoreOriginalWallpaper" type="radio">元の背景画像に戻す</button>
    <button id="openSettings" type="button">設定</button>
  </div>
  <div class="Contents">
    <h1>Non-sicky めも</h1>
    <div class='add'>
      <form>
        <button id="add" type="button">TODO 追加</button>
      </form>
    </div>
    <select id="sort">
      <option value="id" <% if (sortsetting == 'id' ){ %> selected <% } %>>並び順を変更</option>
      <option value="UpdatedAt" <% if (sortsetting ==  'UpdatedAt') { %> selected <% } %>>更新</option>
      <option value="deadline" <% if (sortsetting ==  'deadline') { %> selected <% } %>>期限</option>
    </select>

    <table>
        <thead> 
            <tr>              
                <th>TODO</th>
                <th width="100">〆切</th>
                <th width="70"></th>
                <th width="70"></th>
                <th width="70"></th>
            </tr>
        </thead>
        <tbody>
          <ul>
            <% allTasks.forEach((task) => { %>
                <tr id="<%= task.id %>">
                    <td><li><%= task.text %></li></td>
                    <% if(task.IsUseDeadline != 0){%>
                    <td><%= task.deadline %></td>
                    <% }else{ %>
                    <td></td>
                    <% } %>
                    <td>
                        <button class="display display<%= task.display %>" type="button" >表示</button>
                    </td>
                    <td>
                        <button class="edit" type="button">編集</button>
                    </td>
                    <td>
                        <button class="delete" type="button">削除</button>
                    </td>
                </tr>
            <% }) %>
          </ul>
        </tbody>
    </table>
  <!-- You can also require other files to run in this process -->
  <script src="../src/js/indexRenderer.js"></script>
</body>

</html>